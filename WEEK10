<h2>University Finder by Country (Fetch API)</h2>

<input type="text" id="countryInput" placeholder="Enter country name">
<button onclick="getUniversities()">Search</button>

<div id="result"></div>

<script>
async function getUniversities() {
    const country = document.getElementById("countryInput").value.trim();
    const resultDiv = document.getElementById("result");
    
    if (!country) {
        resultDiv.innerHTML = "<p>Please enter a country.</p>";
        return;
    }

    resultDiv.innerHTML = "<p>Loading...</p>";

    try {
        const response = await fetch(`http://universities.hipolabs.com/search?country=${country}`);
        const data = await response.json();

        if (data.length === 0) {
            resultDiv.innerHTML = "<p>No universities found.</p>";
            return;
        }

        resultDiv.innerHTML = "";

        data.forEach(u => {
            const card = document.createElement("div");
            card.className = "card";

            card.innerHTML = `
                <h3>${u.name}</h3>
                <p><strong>State:</strong> ${u["state-province"] || "N/A"}</p>
                <p><a href="${u.web_pages[0]}" target="_blank">Visit Website</a></p>
            `;

            resultDiv.appendChild(card);
        });

    } catch (error) {
        resultDiv.innerHTML = "<p>Error fetching data.</p>";
    }
}
</script>

